<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:context=".BranchDetails">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBranch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00B0FF"
        app:layout_constraintBottom_toBottomOf="@id/view2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:id="@+id/toolbarText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center|center_horizontal"
            android:text="Subjects"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#221E1E"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="18dp">

        </TextView>


    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="65dp"
        android:background="#00B0FF"
        app:layout_constraintTop_toTopOf="parent" />


    <ListView
        android:id="@+id/OurListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/list_edges"
        android:divider="@drawable/gradient_background"
        android:dividerHeight="3.0sp"
        android:listSelector="@drawable/listview_colours"
        android:padding="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

</androidx.constraintlayout.widget.ConstraintLayout>

